  },
  "homepage": "https://github.com/blalasaadri/pixels-discord-adapter#readme",
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.20",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.18.2"
  }
